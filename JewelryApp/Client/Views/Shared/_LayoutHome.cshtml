                    // Xử lý kết quả trả về từ API
                    if (Array.isArray(data)) {
                        // Duyệt qua mỗi category và thêm vào danh sách
                        data.forEach(function (category) {
                            var categoryLink = $('<a>').attr('href', '/Home/Shop?Category=' + category.categoryId).addClass('nav-item nav-link').text(category.name);
                            $('#categoryList').append(categoryLink);
                        });
                    }
                },
                error: function (xhr, status, error) {
                    // Xử lý khi có lỗi xảy ra
                    console.error('Error:', error);
                }
            });
        });  
        function addToCart(productID) {          
            try {
                var jsonString = decodeURIComponent(token);
                if (jsonString == null) {
                    console.log("Request sent successfully:")
                }
                else {
                    var data = JSON.parse(jsonString);
                    var requestBody = {
                        username: data.username,
                        productId: productID
                    };
                    $.ajax({
                        url: "https://localhost:7137/api/Detail",
                        type: "POST",
                        contentType: "application/json",
                        data: JSON.stringify(requestBody),
                        success: function (response) {
                            // Xử lý kết quả thành công
                            console.log("Request sent successfully:", response);
                        },
                        error: function (xhr, status, error) {

                            console.error("Error sending request:", error);

                        }
                    });
                }                             
            } catch (error) {
                $('#loginModal').modal('show'); // Mở modal
            }          
        } 
        $('#saveProfile').on('click', function () {  
            var jsonString = decodeURIComponent(token);
            var data = JSON.parse(jsonString);
            var username=data.username
            var newPassword = $('#new-pass').val();
            var oldPassword = $('#old-pass').val();
            var reNewPassword = $('#renew-pass').val();
            requestBody = {
                "username": username,
                "oldPassword": oldPassword,
                "newPassword": newPassword
            }            
            if (newPassword !== reNewPassword) {
                alert('Mật khẩu mới không khớp. Vui lòng nhập lại.');
                return false;
            } else {
                $.ajax({
                    url: "https://localhost:7137/api/Account/ChangePass",
                    type: "Put",
                    contentType: "application/json",
                    data: JSON.stringify(requestBody),
