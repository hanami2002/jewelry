    <script>
        function getCookie(name) {
            var nameEQ = name + "=";
            var cookies = document.cookie.split(';');
            for (var i = 0; i < cookies.length; i++) {
                var cookie = cookies[i];
                while (cookie.charAt(0) === ' ') {
                    cookie = cookie.substring(1, cookie.length);
                }
                if (cookie.indexOf(nameEQ) === 0) {
                    return cookie.substring(nameEQ.length, cookie.length);
                }
            }
            return null;
        }
        var isLoggedIn = false;
        var token = getCookie("token");
        if (token != null) {
            isLoggedIn = true;
        }
        var accessDiv = document.getElementById('access');
        var accountDiv = document.getElementById('account');

        if (isLoggedIn) {
            accessDiv.style.display = 'none';
            accountDiv.style.display = 'flex'; 
            var jsonString = decodeURIComponent(token);
            var data = JSON.parse(jsonString);
            console.log(data);
            document.getElementById('info').textContent = data.username;
        
        } else {
            accessDiv.style.display = 'flex';  
            accountDiv.style.display = 'none';
        }
        document.getElementById('logout').addEventListener('click', function (event) {
            event.preventDefault(); 
            deleteCookie('token');
            location.reload();
        });
        function deleteCookie(name) {
            document.cookie = name + '=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
        }
